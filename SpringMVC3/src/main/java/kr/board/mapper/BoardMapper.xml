<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.board.mapper.BoardMapper">
    
      <!-- select에는 resultType -->
      <select id="boardList" resultType="kr.board.domain.Board">
	    select * from board order by idx desc
      </select>
      
      <!-- insert에는 parameterType -->
      <insert id="boardInsert" parameterType="kr.board.domain.Board">
      	insert into board(title,contents,writer)
      	values(#{title},#{contents},#{writer})
      </insert>
      
      <select id="boardContent"
          	  resultType="kr.board.domain.Board"
          	  parameterType="int">
      	select * from board where idx=#{idx}
      </select>
      
      <update id="boardUpdate"
          	  parameterType="kr.board.domain.Board">
	  	update board set title=#{title},contents=#{contents}
	  	where idx=#{idx}    
      </update>
      
      
</mapper>